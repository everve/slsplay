  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/"
  },
  "dependencies": {
    "aws-sdk": "^2.3.9",
    "node-http-error": "^0.2.0",
    "node-uuid": "^1.4.7"
  },
  "devDependencies": {
    "blue-tape": "^0.2.0",
    "chai": "^3.5.0",
    "lambda-wrapper": "0.0.6",
    "supertest": "^1.2.0",
    "tape": "^4.5.1"
  },
  "scripts": {
    "test:travis": "npm run test:integration",
    "test:integration": "tape */*.int.js",
    "test:unit": "tape */*.spec.js",
    "localdb":"sudo docker-compose up -d && sls setup db -s dev -r eu-central-1",
    "localserver": "npm --debug debug.js",
    "pretest:travis":"npm run localdb && npm run localserver &",
    "posttest:travis":"sudo docker-compose stop"
  }

}
